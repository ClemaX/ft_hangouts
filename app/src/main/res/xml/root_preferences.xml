        <ListPreference
            app:key="appBarColor"
            app:title="@string/appbar_color_title"
            app:entries="@array/appbar_color_entries"
            app:entryValues="@array/appbar_color_values"
            app:defaultValue="material_you"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>